.slider
	height 700px
	position relative

	&__logo
		display inline-block
		position absolute
		top 49px
		left 0

	&__header-wrapper
		padding-top 75px
		height 105px
		position absolute
		z-index 10
		min-width 1055px

		+mobile()
			min-width 400px
			padding-top 0


	&__header-black
		background: #000000
		position: absolute
		top: 0
		left: 0
		bottom: 0
		height 100%
		width: 83%
		min-width 83%
		z-index 10
		visibility hidden

	+mobile()

		&__mobile-menu_show

			.slider

				&__header-black
					visibility visible

				&__header
					display block
			
	&__header
		display inline-block
		padding-left 150px

		+mobile()
			padding-left 6px
			padding-top 177px
			display none

	&__pagination
		position absolute
		right -241px
		top 0
		z-index 1
		font-size 0

		&-btn
			sprite($pagination-btn)
			display inline-block
			margin-right 55px
			cursor pointer


			&_next
				sprite($pagination-btn-next)

		&-wrapper
			width 1150px
			margin auto
			position absolute
			top 223px

			+mobile()
				position static

		+mobile()
			bottom 51px
			right initial
			top initial

	&__wrapper
		position relative
