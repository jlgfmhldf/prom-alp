mixin slide(data, counter, length)

	.slide
		img.slide__bg(src='assets/images/slide-image-'+counter+'.jpg')
		img.slide__bg.slide__bg_mobile(src='assets/images/slide-image-'+1+'-mobile.jpg')
		.slide__content.wrapper
			.slide__title!=data.title

			a.slide__facts(href='#company')
				.slide__facts-text!=data.facts

			.slide__phone
				.slide__phone-item 8 (432) 25 69 000
				.slide__phone-item 8 (920) 212 47 98

			.slide__number
				.slide__number-part='0' + counter
				| /
				.slide__number-summ='0' + length
				.slide__number-summ _____


mixin slider(data)
	.slider
		.wrapper
			block

		.js-slider
			- counter = 1
			each sliderInfo in data
				- length = data.length

				+slide(sliderInfo, counter, length)
				- counter++



		.slider__pagination-wrapper.wrapper
			.slider__pagination
				.slider__pagination-btn.slider__pagination-btn_prev.js-slider-prev
				.slider__pagination-btn.slider__pagination-btn_next.js-slider-next

